{
  "name": "jaywant-portfolio-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:web": "npm --workspace apps/web run dev",
    "dev:api": "npm --workspace apps/api run start:dev",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "build": "npm -w apps/api run build && npm -w apps/web run build",
    "seed": "npm -w apps/api run prisma:seed",
    "db:migrate": "npm -w apps/api run prisma:migrate",
    "db:generate": "npm -w apps/api run prisma:generate"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
